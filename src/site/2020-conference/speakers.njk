---
layout: layouts/_base.njk
title: Speakers - RadicalxChange
---

<!-- prettier-ignore -->
{% import "components/nav.njk" as nav %}
<!-- prettier-ignore -->
{% import "components/header.njk" as header %}
<!-- prettier-ignore -->
{% import "components/section.njk" as section %}
<!-- prettier-ignore -->
{% import "components/page.njk" as page %}
<!-- prettier-ignore -->
{% import "components/footer.njk" as footer %}
<!-- prettier-ignore -->
{% import "components/modal.njk" as modal %}
<!-- prettier-ignore -->
{% import "components/subscribe-modal.njk" as subscribeModal %}

<main>
  <!-- prettier-ignore -->
  {{ nav.stickyMenuButton() }}
  <!-- prettier-ignore -->
  {% call nav.render(false) %}
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call header.render("Conference") %}
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("Speakers", false) %}
  <div class="flex flex-col justify-between h-full">
    <a
      href="#"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mb-lg lg:mb-lg/lg overflow-hidden"
    >
      {% for s in allSpeakers2020 %}
      <div
        class="conference-image"
        style="background-image: linear-gradient(black, black), url('{{
          s.picture
        }}');"
      >
        <div class="absolute top-0 right-0 w-1/2 p-sm lg:p-lg/sm bg-white">
          <h4 class="text-sm lg:text-lg/sm font-semibold">{{ s.name }}</h4>
          <p class="text-xs lg:text-lg/xs">{{ s.title }}</p>
        </div>
        <div class="hidden">
          {{ s.bio }}
        </div>
      </div>
      {% endfor %}
    </a>
    <div class="lg:self-end mb-lg mx-base lg:mb-lg/xl lg:mr-lg/lg lg:ml-0">
      <a class="animated-link uppercase" href="#">See all speakers</a>
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
</main>
<!-- prettier-ignore -->
{% call footer.render('bg-white') %}
<!-- prettier-ignore -->
{% endcall %}
<!-- prettier-ignore -->
{% call modal.render('subscribe') %}
<!-- prettier-ignore -->
{% call subscribeModal.render() %}
<!-- prettier-ignore -->
{% endcall %}
<!-- prettier-ignore -->
{% endcall %}
<script
  async
  src="https://platform.twitter.com/widgets.js"
  charset="utf-8"
></script>
<script>
  // prettier-ignore
  {% include "components/nav.js" %}
  // prettier-ignore
  {% include "components/modal.js" %}
</script>

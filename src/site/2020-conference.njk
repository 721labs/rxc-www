      class="conference-image"
      style="background-image: linear-gradient(black, black), url('{{
        s.picture
      }}');"
      href="#"
    >
      <div class="absolute top-0 right-0 w-1/2 p-sm lg:p-lg/sm bg-white">
        <h4 class="text-sm lg:text-lg/sm font-semibold">{{ s.name }}</h4>
        <p class="text-xs lg:text-lg/xs">{{ s.title }}</p>
      </div>
      <div class="hidden">
        {{ s.bio }}
      </div>
    </a>
    {% endfor %}
    <a class="conference-image" href="#">
      <div class="flex justify-center items-center h-full">
        <span class="animated-link text-lg lg:text-lg/lg uppercase"
          >See all speakers</span
        >
      </div>
    </a>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
